<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#000000"
    android:gravity="center_horizontal">

    <!-- Logo grande arriba -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="422dp"
        android:layout_height="220dp"
        android:src="@drawable/logomarvi"
        android:contentDescription="Logo Peluquería Marvi"
        android:layout_marginBottom="32dp"
        android:scaleType="fitCenter" />

    <!-- Botón Iniciar Sesión -->
    <Button
        android:id="@+id/btnIniciarSesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesión"
        android:backgroundTint="#460e56"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:padding="14dp"
        android:layout_marginBottom="20dp" />

    <!-- Botón Registrarse -->
    <Button
        android:id="@+id/btnRegistrarse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿No tienes cuenta? Regístrate"
        android:backgroundTint="#460E56"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:padding="12dp" />

    <!-- Espacio flexible para empujar footer abajo -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Footer con icono de WhatsApp y número -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/whatsappIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_whatsapp"
            android:contentDescription="Icono WhatsApp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/whatsappNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3183671286"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
